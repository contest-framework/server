{
  "incremental": true,
  "indentWidth": 2,
  "typescript": {
    "semiColons": "asi"
  },
  "json": {
  },
  "markdown": {
    "textWrap": "always"
  },
  "includes": [
    "**/*.{ts,json,md}"
  ],
  "excludes": [
    "node_modules",
    "target"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.57.0.wasm",
    "https://plugins.dprint.dev/json-0.13.0.wasm",
    "https://plugins.dprint.dev/markdown-0.10.0.wasm"
  ]
}
